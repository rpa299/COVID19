<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".activity_perfil_editar" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextDataNascimentoEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Data de Nascimento" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8px">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextSexoEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Sexo" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextAlturaEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Altura" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextPesoEditar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Peso" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTipoSangue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de Sangue" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buttonEditarPerfilConfirmar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"
                android:background="@drawable/cor_botoes"
                android:text="Confirmar"
                android:textColor="@color/colorPrimaryDark" />

            <Button
                android:id="@+id/buttonEditarPerfilCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px"
                android:background="@drawable/cor_botoes"
                android:text="Cancelar"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>